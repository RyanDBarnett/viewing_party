<h1><%= @movie.title %></h1>

<h2>Movie Details</h2>

<section id="basic_info">
  <p>Vote Average: <%= @movie.vote_average %></p>
  <p>Runtime: <%= @movie.runtime_hours %> Hour(s) <%= @movie.runtime_minutes %> Minute(s)</p>
  <p>Genres: <%= @movie.list_genres %></p>
</section>

<section id="summary_cast">
    <h3>Summary</h3>
    <p><%= @movie.overview %></p>
    <h3>Cast</h3>
    <ul>
        <% @movie.cast.each do |member| %>
            <li><%= member[0]%> as <%= member[1]%></li>
        <% end %>
    </ul>
</section>