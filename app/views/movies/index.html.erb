<h1><%= @films.count %> Movies</h1>

<%= button_to 'Find Top Rated Movies', movies_path, method: :get %>

<section class="section" id="movie_search">
  <%= form_with url: movies_path, method: :get, local: true do |form| %>
    <%= form.label :search, 'Search' %>
    <%= form.text_field :search %>
    <%= form.submit 'Search' %>
  <% end %>
</section>

<section class="section">
  <% @films.each do |film| %>
    <div id="movie-<%= film.id %>">
      <%= film.title %>
      <p>Vote Average: <%= film.vote_average %></p>
    </div>
  <% end %>
</section>
